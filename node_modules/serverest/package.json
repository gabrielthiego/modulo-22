{
  "name": "serverest",
  "version": "1.1.7",
  "description": "Servidor REST local de forma rápida e simples para estudo de testes de API",
  "author": "Paulo Gonçalves <paulorochag@hotmail.com> (https://www.linkedin.com/in/paulo-goncalves/)",
  "license": "MIT",
  "main": "index.js",
  "files": [
    "data/",
    "src/"
  ],
  "bin": {
    "serverest": "./index.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/PauloGoncalvesBH/serverest.git"
  },
  "homepage": "https://serverest.js.org",
  "keywords": [
    "testing",
    "server",
    "rest",
    "api"
  ],
  "scripts": {
    "commit": "git-cz",
    "doc": "npx docsify serve docs",
    "start": "node index.js",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "json-server": "^0.16.1",
    "jsonwebtoken": "^8.5.1",
    "yargs": "^15.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "docsify-cli": "^4.4.0",
    "husky": "^4.2.3",
    "standard": "^14.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
